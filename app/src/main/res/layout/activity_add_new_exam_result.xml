                android:layout_marginTop="15dp"
                android:entries="@array/grade_array"/>

            <Spinner
                android:id="@+id/spnCredit7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:entries="@array/credit_array"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your GPA is: 0.00"
            android:id="@+id/scoreGPA"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <Button
            android:id="@+id/fnCalculate"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:onClick="fnCalculate"
            android:text="CALCULATE" />

        <Button
            android:id="@+id/fnSave"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:onClick="fnSave"
            android:text="SAVE" />

        <Button
            android:id="@+id/fnReset"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:onClick="fnReset"
            android:text="RESET" />

    </LinearLayout>


</LinearLayout>