<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:text="Welcome to GPA Calculator"
        android:textColor="@android:color/background_light"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_add_result"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        android:background="@drawable/roundedcorner"
        android:onClick="fnAddGPA"
        android:text="Add New Exam Result" />

    <Button
        android:id="@+id/btn_view_result"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/btn_add_result"
        android:layout_alignTop="@+id/btn_add_result"
        android:layout_marginStart="0dp"
        android:layout_marginTop="187dp"
        android:onClick="fnViewGPA"
        android:text="View GPA Result"
        android:background="@drawable/roundedcorner"/>

</RelativeLayout>